{
    "layer": "top",
    "spacing": 0,
    "height": 0,

    "margin-top": 8,
    "margin-right": 8,
    "margin-bottom": 0,
    "margin-left": 8,

    "modules-left": [
        "hyprland/workspaces",
        "mpris"
    ],

    "modules-center": [
        "clock",
	"custom/notification"
    ],

    "modules-right": [
	"custom/kernel",
	"custom/updates",
        "pulseaudio",
	"disk",
        "cpu",
        "memory",
        "tray"
    ],

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "tooltip": false
    },

    "mpris": {
      "title-len": 60,
      "format": "{player_icon} {title} - {artist}",
	"format-paused": "{status_icon} <i>{title} - {artist}</i>",
	"player-icons": {
		"default": "‚ñ∂",
		"mpv": "üéµ"
	},
	"status-icons": {
		"paused": "‚è∏"
	}
    },

    "clock": {
	"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:L%H:%M:%S %A %d %B %Y}",
	"locale": "ga_IE.UTF-8",
	"interval": 1,
	"on-click": "footclient calcurse"
        //"tooltip-format": "{<big>{:%Y :B}</big>\n<tt><small>{calendar}</small></tt>",
    },

    "custom/notification": {
	"tooltip": false,
	"format": "{icon}",
        "format-icons": {
	  "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
	  "none": "ÔÇ¢",
	  "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
	  "dnd-none": "Ôá∑",
	  "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
	  "inhibited-none": "ÔÇ¢",
	  "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
	  "dnd-inhibited-none": "Ôá∑"
	},
	"return-type": "json",
      	"exec-if": "which swaync-client",
      	"exec": "swaync-client -swb",
      	"on-click": "swaync-client -t -sw",
      	"on-click-right": "swaync-client -d -sw",
      	"escape": true,
	"justify": "center"
    },

    "custom/kernel": {
	"exec": "uname -sr | sed s/-.*// | sed s/Linux.//",
	"format": "Û∞ªÄ {}",
	"interval": 60000
    },

    "custom/updates": {
	"exec": "checkupdates | wc -l",
	"format": "Û∞£á {}",
	"tooltip-format": "$checkupdates",
	"on-click": "footclient yay",
	"interval": 600
    },

    "pulseaudio": {
        "scroll-step": 5,
        "max-volume": 150,
	"format": "{icon} {volume}%",
        "format-muted": "Û∞∏à {volume}%",
	"format-icons": {
            "default": ["Û∞ïø", "ÔÄß", "ÔÄ®"]
	},
        "nospacing": 1,
        "on-click": "pavucontrol",
        "tooltip": false
    },

    "disk":{
      "format": "Óâ± {free}"
    },

    "cpu": {
        "format": "Ôãõ {usage}%",
        "interval": 2,

        "states": {
            "critical": 90
        }
    },

    "memory": {
        "format": "ÓøÖ {percentage}%",
        "interval": 2,

        "states": {
            "critical": 80
        }
    },

    "tray": {
        "spacing": 10,
        "tooltip": false
    }
}
